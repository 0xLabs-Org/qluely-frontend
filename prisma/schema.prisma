generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id               String        @id @default(uuid())
  userId           String        @unique
  plan             AccountTypes  @default(FREE)
  period           BillingCycle?
  planStartedAt    DateTime?
  planExpiresAt    DateTime?
  creditsRemaining Int           @default(15)
  creditsUsed      Int           @default(0)
  imageCredits     Int           @default(5)
  audioCredits     Int           @default(5)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  User             User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([planExpiresAt])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  account   Account?
  Detail    Detail?
  Order     Order[]
}

model Order {
  id        String   @id @default(uuid())
  receipt         String
  userId          String
  amount          Int
  currency        CurrencyTypes
  status          PaymentStatus @default(CREATED)
  plan            AccountTypes
  createdAt       DateTime      @default(now())
  updatedAt       DateTime
  razorpayOrderId String
  User            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Payment {
  id        String   @id @default(uuid())
  razorpayOrderId   String   @unique
  razorpayPaymentId String?
  razorpaySignature String?
  orderId           String
  method            String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime
}

model Detail {
  id        String   @id @default(uuid())
  userId            String    @unique
  role              UserRole?
  primaryUseCase    UseCase?
  onboardingSkipped Boolean   @default(false)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime
  User              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Plan {
  id        String   @id @default(uuid())
  name         AccountTypes @unique @default(FREE)
  description  String
  monthlyPrice Int
  yearlyPrice  Int
  dicount      Int?
  popular      Boolean      @default(false)
}

enum AccountTypes {
  FREE
  UNLIMITED
  PRO
  BASIC
}

enum BillingCycle {
  MONTH
  YEAR
}

enum CurrencyTypes {
  USD
  INR
}

enum PaymentStatus {
  CREATED
  PAID
  FAILED
  REFUNDED
}

enum UseCase {
  MEETINGS_SUMMARIES
  INTERVIEWS
  SALES_CALLS
  TEAM_STANDUPS
  CLIENT_CALLS
  OTHER
}

enum UserRole {
  FOUNDER
  PRODUCT_MANAGER
  ENGINEER
  RECRUITER
  SALES_MARKETING
  STUDENT
  OTHER
}
