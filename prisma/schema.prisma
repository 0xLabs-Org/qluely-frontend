generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id               String        @id @default(uuid())
  userId           String        @unique
  plan             AccountTypes  @default(FREE)
  period           BillingCycle?
  planStartedAt    DateTime?
  planExpiresAt    DateTime?
  creditsRemaining Int           @default(15)
  creditsUsed      Int           @default(0)
  imageCredits     Int           @default(5)
  audioCredits     Int           @default(5)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  referralCode     String?       @unique
  referralRewarded Boolean       @default(false)
  referredById     String?
  Account          Account?      @relation("AccountToAccount", fields: [referredById], references: [id])
  other_Account    Account[]     @relation("AccountToAccount")
  User             User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([planExpiresAt])
}

model User {
  id                String    @id @default(uuid())
  email             String    @unique
  password          String
  createdAt         DateTime  @default(now())
  isOnboarded       Boolean   @default(false)
  onboardedAt       DateTime?
  onboardingSkipped Boolean   @default(false)
  role              String?
  useCases          String[]  @default([])
  account           Account?
  Order             Order[]
}

model Order {
  id              String        @id @default(uuid())
  receipt         String
  userId          String
  amount          Int
  currency        CurrencyTypes
  status          PaymentStatus @default(CREATED)
  plan            AccountTypes
  createdAt       DateTime      @default(now())
  updatedAt       DateTime
  razorpayOrderId String
  User            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Payment {
  id                String   @id @default(uuid())
  razorpayOrderId   String   @unique
  razorpayPaymentId String?
  razorpaySignature String?
  orderId           String
  method            String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime
}

model Meeting {
  id        String    @id @default(uuid())
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime
  Request   Request[]
}

model Plan {
  id              String        @id @default(uuid())
  name            AccountTypes
  description     String
  monthlyPrice    Int
  yearlyPrice     Int
  popular         Boolean       @default(false)
  monthlyDiscount Int?
  yearlyDiscount  Int?
  currency        CurrencyTypes

  @@unique([name, currency])
}

model Request {
  id        String  @id @default(uuid())
  meetingId String
  request   String
  response  String
  Meeting   Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)
}

model Waitlist {
  id       String   @id
  email    String   @unique
  source   String   @default("landing_page")
  position Int      @default(autoincrement())
  joinedAt DateTime @default(now())
  notified Boolean  @default(false)
}

enum AccountTypes {
  FREE
  UNLIMITED
  PRO
  BASIC
}

enum BillingCycle {
  MONTH
  YEAR
}

enum CurrencyTypes {
  USD
  INR
}

enum PaymentStatus {
  CREATED
  PAID
  FAILED
  REFUNDED
}

enum UseCase {
  MEETINGS_SUMMARIES
  INTERVIEWS
  SALES_CALLS
  TEAM_STANDUPS
  CLIENT_CALLS
  OTHER
  CODE_GENERATION
  CODE_REVIEW
  DEBUGGING
  LEARNING
  DOCUMENTATION
  RESEARCH
  PROTOTYPING
  AUTOMATION
  DATA_ANALYSIS
}

enum UserRole {
  FOUNDER
  PRODUCT_MANAGER
  ENGINEER
  RECRUITER
  SALES_MARKETING
  STUDENT
  OTHER
  DEVELOPER
  DESIGNER
  RESEARCHER
  BUSINESS_ANALYST
  DATA_SCIENTIST
  ENTREPRENEUR
}
